import logging
from rich.logging import RichHandler

FORMAT = "%(asctime)s %(message)s"
logging.basicConfig(
    filename="log.log", level=logging.INFO, format=FORMAT, datefmt="[%X]", handlers=[RichHandler()]
)

log = logging.getLogger("rich")
log.info("**Hello, World!**")
